<!DOCTYPE html>
html(lang="en")
head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  title Form elements
body
  .logo

  .text-field-default
    .text-field_description
      p TEXT FIELD
      p DEFAULT
    include ./text-field/text-field
    +text-field('Email')

  .text-field-hover
    .text-field_description
      p TEXT FIELD
      p HOVER / FOCUS
    +text-field('This is pretty awesome','text-field_hover')

  .dropdown
    .text-field_description 
      p DROPDOWN
    div(class="text-field dropdown-field") 
      p Сколько гостей
      .drop-button
    div(class="text-field dropdown-menu invisible")
      .dropped-menu__option
        p ВЗРОСЛЫЕ
        div.dropped-menu__buttons-section
          button(class="add-remove-button guest-minus")  -
          p 0
          button(class="add-remove-button guest-plus") +
      .dropped-menu__option
        p ДЕТИ
        div.dropped-menu__buttons-section
          button(class="add-remove-button guest-minus")  -
          p 0
          button(class="add-remove-button guest-plus") +
      .dropped-menu__option
        p МЛАДЕНЦЫ
        div.dropped-menu__buttons-section
          button(class="add-remove-button child-minus")  -
          p 0
          button(class="add-remove-button child-plus") +
      button.dropped-menu__confirm-button ПРИМЕНИТЬ

  .text-field-masked
    .text-field_description
      p MASKED TEXT FIELD
    +text-field('ДД.ММ.ГГГГ')

  
  



      
    


  