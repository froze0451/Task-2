<!DOCTYPE html>
html(lang="en")
head
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  title Form elements
body
  .logo

  .text-field-default
    .text-field_description
      p TEXT FIELD
      p DEFAULT
    include ./text-field/text-field
    +text-field('Email')

  .text-field-hover
    .text-field_description
      p TEXT FIELD
      p HOVER / FOCUS
    +text-field('This is pretty awesome','text-field_hover')

  .guests-dropdown
    .text-field_description 
      p DROPDOWN
    div(class="text-field dropdown-field") 
      p Сколько гостей
      .drop-button
    div(class="text-field dropdown-menu invisible")
      .dropped-menu__option
        p ВЗРОСЛЫЕ
        div.dropped-menu__buttons-section
          button(class="add-remove-button guest-minus")  -
          p 0
          button(class="add-remove-button guest-plus") +
      .dropped-menu__option
        p ДЕТИ
        div.dropped-menu__buttons-section
          button(class="add-remove-button guest-minus")  -
          p 0
          button(class="add-remove-button guest-plus") +
      .dropped-menu__option
        p МЛАДЕНЦЫ
        div.dropped-menu__buttons-section
          button(class="add-remove-button child-minus")  -
          p 0
          button(class="add-remove-button child-plus") +
      button.dropped-menu__confirm-button ПРИМЕНИТЬ

  .text-field-masked
    .text-field_description
      p MASKED TEXT FIELD
    +text-field('ДД.ММ.ГГГГ')

  .double-date-dropdown
    .date-drowdown
      .text-field_description
        p DATE DROPDOWN
      div(class="text-field dropdown-field") 
        p ДД.ММ.ГГГГ
        .drop-button
    .date-drowdown
      .text-field_description
        p DATE DROPDOWN
      div(class="text-field dropdown-field") 
        p 19.08.2019
        .drop-button
    div(class="calendar invisible")
      .calendar-top
        div(class="calendar-move-button previous-month-button")
        p Январь 2021
        div(class="calendar-move-button next-month-button")
      table
        thead
          tr 
            td Пн
            td Вт
            td Ср
            td Чт
            td Пт 
            td Сб
            td Вс
        tbody(id="calendar")
      .calendar-buttons
        button.dropped-menu__confirm-button ОЧИСТИТЬ
        button.dropped-menu__confirm-button ПРИМЕНИТЬ

  div(class="date-dropdown filter-date-dropdown")
    .text-field_description 
      p FILTER DATE DROPDOWN
    div(class="text-field  dropdown-field") 
      p 19 авг - 23 авг
      .drop-button

  .subscription-text-field
    .text-field_description
      p SUBSCRIPTION TEXT FIELD
    .subscription-field
      +text-field('Email')
      .confirm-button

  .room-facilities
    .text-field_description 
      p DROPDOWN
      p DEFAULT
    div(class="text-field dropdown-field") 
      p Какие удобства?
      .drop-button
    div(class="text-field dropdown-menu invisible")
      .dropped-menu__option
        p СПАЛЬНИ
        div.dropped-menu__buttons-section
          button(class="add-remove-button bedroom-minus")  -
          p 0
          button(class="add-remove-button bedroom-plus") +
      .dropped-menu__option
        p КРОВАТИ
        div.dropped-menu__buttons-section
          button(class="add-remove-button bed-minus")  -
          p 0
          button(class="add-remove-button bed-plus") +
      .dropped-menu__option
        p ВАННЫЕ КОМНАТЫ
        div.dropped-menu__buttons-section
          button(class="add-remove-button bathroom-minus")  -
          p 0
          button(class="add-remove-button bathroom-plus") +

  .expandable-checkbox-list
    .list-name 
      p EXPANDABLE CHECHBOX LIST
      .drop-button
    .checkbox-button
      input(type="checkbox" name="haheh") 
      label(for="haheh") Hahahah
      
    


       

    
  
     
  

  
  



      
    


  